{
  "name": "coincharts",
  "version": "1.0.0",
  "description": "Cyptocurrency price chart, powered by Coinbase",
  "license": "MIT",
  "scripts": {
    "build": "react-scripts build && rm build/static/**/*.map",
    "check": "npm run stylelint && npm run lint",
    "deploy": "npm run check && npm run build && cp now.json ./build && now ./build --public && now alias",
    "eject": "react-scripts eject",
    "lint": "xo",
    "precommit": "npm run lint && lint-staged && npm run test",
    "serve": "npm run build && serve ./build",
    "start": "react-scripts start",
    "stylelint": "stylelint --color -- \"src/**/*.css\"",
    "test": "CI=true react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "updatePriceData": "scripts/updatePriceData.sh ./public/priceData"
  },
  "dependencies": {
    "axios": "0.17.0",
    "classnames": "2.2.5",
    "currency-formatter": "1.3.1",
    "d3-array": "1.2.1",
    "d3-ease": "1.0.3",
    "d3-interpolate-path": "2.0.1",
    "d3-scale": "1.0.6",
    "d3-selection": "1.1.0",
    "d3-shape": "1.2.0",
    "d3-time-format": "2.1.0",
    "d3-transition": "1.1.0",
    "lodash.get": "4.4.2",
    "lodash.isequal": "4.5.0",
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-helmet": "5.2.0",
    "react-redux": "^5.0.6",
    "react-scripts": "1.0.16",
    "redux": "^3.7.2",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "2.6.0",
    "eslint-config-xo-react": "0.13.0",
    "eslint-plugin-react": "7.4.0",
    "husky": "0.14.3",
    "lint-staged": "^4.3.0",
    "now": "8.3.11",
    "prettier": "1.7.4",
    "serve": "6.4.0",
    "stylelint": "8.2.0",
    "stylelint-config-standard": "17.0.0",
    "xo": "0.18.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "jest"
    ],
    "extends": [
      "prettier",
      "xo-react"
    ],
    "ignores": [
      "src/registerServiceWorker.js"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "react/jsx-tag-spacing": 0,
      "unicorn/filename-case": 0
    },
    "space": true
  }
}
